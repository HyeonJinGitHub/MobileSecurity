<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="사용자 이름:  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_mypage_name"
            android:text="홍길동"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="onClickMyPage"
            android:id="@+id/button_mypage_name"
            android:text="수정"
            android:layout_marginLeft="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="20sp"
            android:textColor="#000000"
            android:text="비밀번호 변경"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15sp"
                android:text="안전한 비밀번호로 내 정보를 보호"
                android:textColor="#0000ff"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15sp"
                android:textColor="#000000"
                android:text="하세요"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="15sp"
            android:text="⦁ 다른 아이디/사이트에서 사용한 적 없는 비밀번호"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginTop="15sp"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:text="⦁ 이전에 사용한 적 없는 비밀번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15sp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="가 안전합니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/edit_now_password"
            android:hint="현재 비밀번호"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_marginTop="10sp"
            android:id="@+id/edit_new_password"
            android:hint="새 비밀번호"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />
        <EditText
            android:ems="15"
            android:hint="새 비밀번호 확인"
            android:id="@+id/edit_new_password_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_mypage_ok"
            android:onClick="onClickMyPage"
            android:textColor="#ffffff"
            android:text="확 인"
            android:background="#00ff00"
            android:layout_width="350sp"
            android:layout_height="60sp" />
        <Button
            android:id="@+id/button_mypage_cancel"
            android:onClick="onClickMyPage"
            android:textColor="#000000"
            android:text="취 소"
            android:layout_width="360sp"
            android:layout_height="70sp" />
    </LinearLayout>

</LinearLayout>